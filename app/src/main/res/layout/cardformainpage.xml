<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.design.card.MaterialCardView
        android:layout_below="@+id/app_bar"
        android:background="@drawable/profile"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/cartdetail"
        android:layout_centerHorizontal="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/q"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/typeofque"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:id="@+id/question"
                android:textStyle="italic"

                android:layout_below="@+id/typeofque"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/q"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:id="@+id/ppp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            >
            <ImageView

                android:id="@+id/profile_image"
                android:src="@drawable/queuser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/username"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_toRightOf="@id/profile_image"
                android:text="User name"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_image"
                android:layout_below="@id/username"
                android:paddingLeft="10dp"
                android:id="@+id/dateofque"
                android:textColor="#000000"
                android:text="update date"
                android:textSize="10dp"
                >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:layout_below="@+id/ppp"
            android:id="@+id/rel1"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/Imagetopost"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_local_post_office_black_24dp"
                >
            </ImageView>
            <TextView
                android:id="@+id/Answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answers"
                android:textColor="#000000"
                android:layout_below="@id/Imagetopost"
                android:textSize="15dp"></TextView>

            <ImageView
                android:id="@+id/moresnswers"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="15dp"
                android:background="@null"
                android:src="@drawable/comment"
                android:layout_below="@id/Answers"></ImageView>
        </RelativeLayout>
</RelativeLayout>
    </android.support.design.card.MaterialCardView>
</RelativeLayout>